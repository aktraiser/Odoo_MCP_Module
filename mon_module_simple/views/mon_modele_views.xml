<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vue Liste (Odoo 18.0 utilise 'list' au lieu de 'tree') -->
        <record id="view_mon_modele_list" model="ir.ui.view">
            <field name="name">mon.modele.list</field>
            <field name="model">mon.modele</field>
            <field name="arch" type="xml">
                <list string="Mon Modele" sample="1" create="true" edit="true" delete="true">
                    <field name="name" string="Nom"/>
                    <field name="description" string="Description"/>
                    <field name="date_creation" string="Date de création"/>
                    <field name="state" string="État" widget="badge" 
                           decoration-success="state == 'confirmed'" 
                           decoration-info="state == 'draft'"
                           decoration-warning="state == 'done'"
                           decoration-danger="state == 'cancelled'"/>
                    <field name="derniere_execution" string="Dernière exécution"/>
                    <field name="succes" string="Succès"/>
                    <field name="erreurs" string="Erreurs"/>
                </list>
            </field>
        </record>

        <!-- Vue Kanban -->
        <record id="view_mon_modele_kanban" model="ir.ui.view">
            <field name="name">mon.modele.kanban</field>
            <field name="model">mon.modele</field>
            <field name="arch" type="xml">
                <kanban string="Mon Modele" class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="description"/>
                    <field name="date_creation"/>
                    <field name="succes"/>
                    <field name="erreurs"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <strong><field name="name"/></strong>
                                        </div>
                                        <div class="o_secondary">
                                            <field name="date_creation"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_card_manage_pane">
                                        <field name="description"/>
                                    </div>
                                </div>
                                <div class="o_kanban_card_footer">
                                    <div class="o_kanban_card_left">
                                        <span class="badge" t-attf-class="badge-#{record.state.raw_value == 'confirmed' ? 'success' : record.state.raw_value == 'draft' ? 'info' : record.state.raw_value == 'done' ? 'warning' : 'danger'}">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                    <div class="o_kanban_card_right">
                                        <span class="text-success">✓ <field name="succes"/></span>
                                        <span class="text-danger">✗ <field name="erreurs"/></span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue Formulaire -->
        <record id="view_mon_modele_form" model="ir.ui.view">
            <field name="name">mon.modele.form</field>
            <field name="model">mon.modele</field>
            <field name="arch" type="xml">
                <form string="Mon Modele">
                    <header>
                        <button name="action_confirm" type="object" string="Confirmer" 
                                class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_draft" type="object" string="Remettre en brouillon" 
                                invisible="state != 'confirmed'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom du modèle..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="active"/>
                                <field name="date_creation"/>
                            </group>
                            <group>
                                <field name="derniere_execution"/>
                                <field name="succes"/>
                                <field name="erreurs"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue Recherche -->
        <record id="view_mon_modele_search" model="ir.ui.view">
            <field name="name">mon.modele.search</field>
            <field name="model">mon.modele</field>
            <field name="arch" type="xml">
                <search string="Rechercher Mon Modele">
                    <field name="name" string="Nom" filter_domain="[('name', 'ilike', self)]"/>
                    <separator/>
                    <filter string="Actifs" name="filter_active" domain="[('active', '=', True)]"/>
                    <filter string="Brouillon" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmé" name="filter_confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <separator/>
                    <filter string="Mes enregistrements" name="filter_my_records" 
                            domain="[('create_uid', '=', uid)]"/>
                    <group expand="0" string="Grouper par">
                        <filter string="État" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="Statut" name="group_by_active" context="{'group_by': 'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action de fenêtre -->
        <record id="action_mon_modele" model="ir.actions.act_window">
            <field name="name">Mon Modele</field>
            <field name="res_model">mon.modele</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_mon_modele_search"/>
            <field name="context">{'create': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier enregistrement !
                </p>
                <p>
                    Cliquez sur le bouton "NEW" pour commencer.
                </p>
            </field>
        </record>

        <!-- Menu principal -->
        <menuitem id="menu_mon_module_root" 
                  name="Mon Module" 
                  sequence="100"
                  web_icon="mon_module_simple,static/description/icon.png"/>
        
        <!-- Sous-menu -->
        <menuitem id="menu_mon_modele" 
                  name="Mon Modele" 
                  parent="menu_mon_module_root" 
                  action="action_mon_modele" 
                  sequence="10"/>

    </data>
</odoo> 